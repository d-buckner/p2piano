{
  "name": "p2piano",
  "version": "0.1.0",
  "scripts": {
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "service:dev": "cd service && npm run start:dev",
    "container:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "container": "docker-compose -f docker-compose.yml up --build",
    "dev": "concurrently \"npm run client:dev\" \"npm run service:dev\"",
    "bootstrap": "npm install && cd client && npm install && cd ../service && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
